#!/usr/bin/env php
<?php

use Pimcore\Bootstrap;

require_once dirname(__DIR__).'/vendor/autoload_runtime.php';

// Manually load environment variables from .env file
$envFile = dirname(__DIR__) . '/.env';
if (file_exists($envFile)) {
    $lines = file($envFile, FILE_IGNORE_NEW_LINES | FILE_SKIP_EMPTY_LINES);
    foreach ($lines as $line) {
        if (strpos($line, '=') !== false && strpos($line, '#') !== 0) {
            list($key, $value) = explode('=', $line, 2);
            $_SERVER[trim($key)] = $_ENV[trim($key)] = trim($value);
        }
    }
}

// Set the project root before bootstrapping
$_SERVER['PIMCORE_PROJECT_ROOT'] = $_ENV['PIMCORE_PROJECT_ROOT'] = dirname(__DIR__);

// Bootstrap Pimcore
Bootstrap::setProjectRoot();
Bootstrap::bootstrap();

$kernel = Bootstrap::kernel();
$application = new \Pimcore\Console\Application($kernel);
$application->run();